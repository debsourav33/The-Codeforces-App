<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    tool:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:id="@+id/cardContest"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contest Finished"
        android:textAlignment="center"
        android:textColor="#3B5998"
        android:textSize="22sp"
        android:fontFamily="@font/helvebd"

        />

    <TextView
        android:id="@+id/txtContestTitle"
        android:textColor="#0000cc"
        android:layout_width="match_parent"

        android:text="Educational Codeforces Round 92 (Rated for Div. 2)"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        />


    <TextView
        android:visibility="gone"
        android:id="@+id/txtStartsIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starts In"
        android:textSize="15sp"
        android:layout_margin="3dp"
        android:textAlignment="center"
        android:textColor="#058B00"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/txtInProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In Progress"
        android:textSize="15sp"
        android:layout_margin="3dp"
        android:textAlignment="center"
        android:textColor="#FF0A0A"
        />

    <TextView
        android:id="@+id/txtTime"
        android:textColor="#777"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fine time"
        android:textAlignment="center"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>